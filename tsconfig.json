{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",           // Rollup 会处理模块打包
    "lib": ["ES2021", "DOM"], 
    "declaration": true,          // 生成 .d.ts
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
